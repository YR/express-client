{
  "name": "@yr/express-client",
  "description": "An express.js framework for browser clients",
  "version": "2.1.3",
  "author": "Alexander Pope <alexander.pope@nrk.no>",
  "dependencies": {
    "cookie": "~0.1",
    "eventemitter3": "~1.1",
    "debug": "~2.2",
    "object-assign": "~3.0",
    "path-to-regexp": "~1.2",
    "query-string": "~2.4",
    "@yr/url-utils": "~2.2"
  },
  "devDependencies": {
    "buddy": "~3.0",
    "expect.js": "*",
    "mocha": "*",
    "mocha-phantomjs": "*",
    "transfigure-babel": "~5.8"
  },
  "main": "index.js",
  "repository": "https://github.com/YR/express-client.git",
  "license": "MIT",
  "scripts": {
    "prepublish": "buddy build",
    "test": "buddy build && mocha-phantomjs test/test-runner.html",
    "lint": "NODE_ENV=development node ./node_modules/buddy/bin/buddy -l watch"
  },
  "browser": {
  },
  "buddy": {
    "build": {
      "targets": [
        {
          "input": "src/index.js",
          "output": "test/lib.js",
          "boilerplate": true,
          "bootstrap": true
        },
        {
          "input": "src",
          "output": ".",
          "modular": false
        }
      ]
    }
  }
}
